</style>

  <div class="lrDiv">
<section class="partials">
     <h3>Login</h3>
     <form class="forms" action = "/auth/login" method="POST">
       <input type="text" name="username" placeholder="username"><br>


       <input id="hidePasswordLog" type="password" name="password" placeholder="password">

         <input type="checkbox" onclick="ToggleLI()">
        Show Password<br>
        <button type="submit">Login</button>


</div>

       <script>
         // Change the type of input to password or text
             function ToggleLI() {
                 var temp = document.getElementById("hidePasswordLog");
                 if (temp.type === "password") {
                     temp.type = "text";
                 }
                 else {
                     temp.type = "password";
                 }
             }
     </script>

     </form>
   </section>
