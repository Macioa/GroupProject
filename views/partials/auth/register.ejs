<section class="partials">

  <div class="lrDiv">
  <h3>Register</h3>
    <form class="lrForms" action="/auth/register" method="POST">

      <!-- replace username with email address -->
      <input class="lrInput" type="name" name="username" placeholder="username"> <br>

      <input class="lrInput" id="hidePasswordReg" type="password" name="password" placeholder="password">


      <input type="checkbox" onclick="ToggleR()">
     Show Password<br>
      <button class="submit" type="submit" onclick="alertToLogin()" >Register</button>
</div>
      <script>
            function ToggleR() {
                var temp = document.getElementById("hidePasswordReg");
                if (temp.type === "password") {
                    temp.type = "text";
                }
                else {
                    temp.type = "password";
                }
            }
           function alertToLogin() {
             alert('You are all set! Please Login');
           }
    </script>




    </form>
</section>
